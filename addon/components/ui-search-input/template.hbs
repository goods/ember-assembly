{{svg-jar "search" local-class="search-icon"}}

{{input
  id=@inputId
  value=@value
  required=@required
  type=@type
  placeholder=@placeholder
  disabled=this.isDisabled
  key-up=(action "onKeyUp")
}}

{{#if this.isSearching}}
  <UiSpinner 
    local-class="spinner"
    @appearance="strong"
  />
{{/if}}