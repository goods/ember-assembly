<UiPopover disabled={{this.isDisabled}} as |Popover|>
  <Popover.trigger local-class="ui-select-trigger">
    {{#if this.triggerComponent}}
      {{component this.triggerComponent value=this.value isDisabled=this.isDisabled}}
    {{else}}
      <UiButton disabled={{this.isDisabled}}>
        {{#if this.value }}
          {{#if this.labelPath}}
            {{get this.value this.labelPath}}
          {{else}}
            {{this.value}}
          {{/if}}
        {{else}}
          {{this.placeholder}}
        {{/if}}
      </UiButton>
    {{/if}}
  </Popover.trigger>
  <Popover.content @class="ui-popover-content ui-popover-animated {{local-class "ui-select-content"}}">
    {{#if hasBlock}}
      {{yield 
        (hash
          Option=(component "ui-select-option" onChange=this.onChange onClose=Popover.actions.close)
        )
      }}
    {{else}}
        {{#if this.isLoading}}
          <UiSpinner />
        {{else}}
          {{#each this.options as |option|}}
            <UiSelectOption 
              @value={{option}}
              @labelPath={{this.labelPath}}
              @optionComponent={{this.optionComponent}}
              @onChange={{this.onChange}} 
              @onClose={{Popover.actions.close}}
            />
          {{/each}}
        {{/if}}
    {{/if}}
  </Popover.content>
</UiPopover>