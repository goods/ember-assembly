<div local-class="descriptors" class="ui-field-descriptors">
  {{#if this.label}}
    <label local-class="label" for={{this.inputId}}>
      {{@label}}
    </label>
  {{/if}}
  {{#if this.description}}
    <div local-class="description">
      {{this.description}}
    </div>
  {{/if}}
</div>

<div local-class="controls" class="ui-field-controls">
  {{yield (hash inputId=this.inputId)}}

  {{#if this.errors}}
    <div local-class="validation-messages" class="ui-field-validation-messages">
      {{#each this.errors as |message|}}
        <div local-class="validation-message"  class="ui-field-validation-message">
          {{svg-jar "exclamation-point-2" local-class="validation-icon" height="14px" width="14px"}}
          {{message}}
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>